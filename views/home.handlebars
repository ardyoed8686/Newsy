<div class="jumbotron text-center">
  <div class="background-image">
    <img src="../styles/images/cup-of-coffee-and-newspaper-isolated-on-wood-background-2235.jpg" 
   class="card-img" alt="coffee and newspaper">
  </div>
  
  <div class="overlay">
  <div class="caption"></div>
    <h1>Mongo Scraper</h1>
    <p class="card-text">New York Times - World News Edition</p>
  </div>
</div>

<div class="message">
	<h3>{{message}}</h3>
</div>

{{!-- article container --}}
<div class="container-fluid article-container">
  {{#each articles}}
  <div class="card">
  <div class="card-body">
  <div class="story-body" id={{this._id}}>
  <h2>
    <a href="{{this.link}}" target="_blank">{{this.title}}</a>
  </h2>
  <summary>{{this.summary}}</summary>
  <form action="/saved{{this._id}}" method="POST">
    <button type="submit" class="btn btn-success status" value="{{this.status}}">{{this.status}}</button>
    {{#unless this.note}}
    <button type="button" class="btn btn-success addnote-button" value="{{this._id}}">Add A Note</button>
    {{/unless}}
  </form>
  </h2>
  </div>
  </div>
</div>
 {{/each}}
</div>
